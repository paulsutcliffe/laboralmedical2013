= encabezado('Staff', '/assets/encabezado.jpg', '/assets/icono-alianzas.png', false)



#region-staff.container
  = admin_create('Agregar Miembro', new_miembro_path)
  .region
    .region-title
      %h2.title CONOCE A NUESTRO STAFF DE PROFESIONALES
  - @miembros.each_slice(4) do |miembro|
    .region
      - miembro.each do |miembro|
        .region-inner
          = link_to image_tag(miembro.foto_url(:thumb)), miembro
          %h3.title
            = link_to miembro.nombre , miembro
          %h4.subtitle
            = miembro.puesto
          = admin_controls('Editar', edit_miembro_path(miembro), 'down')
          - if current_admin
            = link_to 'Editar', edit_miembro_path(miembro)
            = link_to 'Eliminar', miembro, :method => :delete, :data => { :confirm => '¿Estás seguro?' }


