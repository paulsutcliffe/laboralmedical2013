= encabezado('Blog', '/assets/encabezado.jpg', '/assets/icono-blog.png', true)


#region-blog-show.container
  - if current_admin
    .admin-control
      = link_to 'Editar', edit_noticia_path(@noticia), class: 'new'

  .region
    .region-inner
      %h2.title
        = @noticia.titulo
      %span.date
        = l @noticia.created_at, format: :supershort
      %span.subtitle
      = @noticia.subtitulo
    
      = image_tag @noticia.imagen_url(:regular), class: 'image-border img-responsive'

      = paragraph(raw(@noticia.contenido))

    %aside.region.icon
      .region-title
        %h2.title Posts Recientes
      - @recientes.each do |reciente|
        .region-inner
          %i.icon_post
          %h3.title= link_to truncate(reciente.titulo, length: 30), reciente
          %span.date= l reciente.created_at, format: :supershort
