= form_for @contacto do |f|
  - if @contacto.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contacto.errors.count, "error")} prohibited this contacto from being saved:"
      %ul
        - @contacto.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .fields
      .field
        = f.label :nombre
        = f.text_field :nombre, placeholder: 'Nombre completo'
      .field
        = f.label :email
        = f.text_field :email, placeholder: 'Ingresar email'
      .field
        = f.label :telefono
        = f.text_field :telefono, placeholder: 'Celular, fijo o ambos'
    .fields
      .field
        = f.label :mensaje
        = f.text_area :mensaje, placeholder: 'DÃ©janos tu mensaje'
      .actions
        = f.submit 'Enviar'
