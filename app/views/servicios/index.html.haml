%h1 Listing servicios

- if current_admin
  = link_to 'Nuevo Servicio', new_servicio_path

%table
  %tr
    %th Icono
    %th Nombre
    %th Descripcion
    - if current_admin
      %th
      %th

  - @servicios.each do |servicio|
    %tr
      %td= image_tag servicio.icono_url(:thumb)
      %td= servicio.nombre
      %td= servicio.descripcion
      - if current_admin
        %td= link_to 'Editar', edit_servicio_path(servicio)
        %td= link_to 'Eliminar', servicio, :method => :delete, :data => { :confirm => '¿Estás seguro?' }
