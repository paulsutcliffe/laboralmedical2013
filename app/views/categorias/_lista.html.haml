
= admin_create('Nuevo Servicio', new_servicio_path)


- @servicios.each do |servicio|
  %li
    = image_tag servicio.icono_url(:thumb_servicios)
    %h3.title
      = servicio.nombre
    = paragraph(servicio.descripcion)
    = admin_controls('Editar', edit_servicio_path(servicio), 'down')
    - if current_admin
      = link_to 'Eliminar', servicio, :method => :delete, :data => { :confirm => '¿Estás seguro?' }
