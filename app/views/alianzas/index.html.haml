
= encabezado('Alianzas', '/assets/encabezado.jpg', '/assets/icono-alianzas.png', false)


.container
  = admin_create('Crear Alianza', new_alianza_path)

  #alianzas-descripcion.region
    .region-title
      %h2.title ALIANZAS ESTRATEGICAS

    .region-inner
      %p Para mejor nuestros servicios, Laboral Medical posee fuertes alianzas y convenios con prestigiosas empresas e instituciones.

  #alianzas-logos.region
    .region-inner
      %table
        %tr
          %th Nombre
          - if current_admin
            %th
            %th
      
        - @alianzas.each do |alianza|
          %tr
            %td= alianza.nombre
            %td= image_tag alianza.logo_url(:thumb)
            - if current_admin
              %td= link_to 'Editar', edit_alianza_path(alianza)
              %td= link_to 'Eliminar', alianza, :method => :delete, :data => { :confirm => '¿Estás seguro?' }
