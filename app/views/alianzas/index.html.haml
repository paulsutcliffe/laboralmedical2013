%h1 Listing alianzas

- if current_admin
  = link_to 'Nueva Alianza', new_alianza_path

%table
  %tr
    %th Nombre
    - if current_admin
      %th
      %th

  - @alianzas.each do |alianza|
    %tr
      %td= alianza.nombre
      - if current_admin
        %td= link_to 'Editar', edit_alianza_path(alianza)
        %td= link_to 'Eliminar', alianza, :method => :delete, :data => { :confirm => '¿Estás seguro?' }
